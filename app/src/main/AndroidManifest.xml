<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!--    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />-->


    <queries>
        <package android:name="com.whatsapp" />
    </queries>

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="smsto" />
        </intent>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="smsto" />
        </intent>
    </queries>

    <application
        android:name="com.eviort.cabedriver.NTApplication"
        android:allowBackup="true"
        android:exported="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.UploadDocument"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.WaitingForApproval"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivitySplash"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBarNight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.eviort.cabedriver.NTActivity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivityForgotPassword"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivityBegin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivitySignUp"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivitySignIn"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivityProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivityHistoryDetail"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.eviort.cabedriver.NTActivity.ActivityHistoryScheduledDetail"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitleBar"
            android:windowSoftInputMode="stateHidden" />

        <!-- Firebase Notifications -->
        <service
            android:name="com.eviort.cabedriver.FCM.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="channelid" />

        <receiver
            android:name="com.eviort.cabedriver.FCM.FirebaseBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.eviort.cabedriver.NTUtilites.LocationUpdatesService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location" />

    </application>

</manifest>