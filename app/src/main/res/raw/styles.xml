<resources>

    <!-- Base application theme. -->
    <style
        name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style
        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style
        name="NTTextAppearance"
        parent="TextAppearance.AppCompat" />


    <!--Full Theme-->

    <style
        name="NTtheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textAppearance">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">@color/text_color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/quantum_yellow</item>
        <item name="android:textColor">@color/quantum_yellow</item>

    </style>

    <!--  Splash Screen Appearance-->

    <style
        name="AppThemeFullScreen"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom Dialog Appearance-->

    <style
        name="dialog_animation"
        parent="TextAppearance.AppCompat">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsFloating">true</item>


    </style>

    <!-- Begin Activity Appearance-->

    <style
        name="AppThemeNoTitleBar"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--  Text Appearance-->

    <style
        name="NTTitleTextAppearance"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_title</item>
    </style>

    <style
        name="NTSmallTextAppearance"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style
        name="NTRegularTextAppearance"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style
        name="NTLargeTextAppearance"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style
        name="NTLinkLargeTextAppearance"
        parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_link</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style
        name="NTExtraLargeTextAppearance"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style
        name="NTExtraLargeTextAppearanceWhite"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>


    <style
        name="NTLargeTextAppearanceWhite"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style
        name="NTLargeTextAppearanceAccent"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style
        name="NTRegularTextAppearanceWhite"
        parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <!-- Button Appearance-->

    <style
        name="NTButtonStyleRight"
        parent="@android:style/Widget">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/left_rounded_corner</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
        <item name="android:minHeight">0dp</item>

    </style>


    <style
        name="NTButtonStyleLeft"
        parent="@android:style/Widget">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/right_rounded_corner</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style
        name="NTButtonStyle"
        parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>

    <style
        name="NTButtonStylePrimary"
        parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>


    <!--Edittext Appearance-->

    <style
        name="NTTextLoginStyle"
        parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:background">@null</item>
    </style>


    <!--Navigation Appearance-->

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_35sdp</item>
        <item name="android:typeface">monospace</item>
    </style>


    <!--CheckBox Appearance-->

    <style
        name="MyCheckBoxTextAppearance"
        parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>


    <style
        name="MyCheckBoxsmallTextAppearance"
        parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <!--Hint Text Appearance-->

    <style
        name="NTHintTextAppearance"
        parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_hint</item>
    </style>

    <!--Toggle Switch Appearance-->

    <style
        name="toggle_switch"
        parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/light_gray
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/light_gray
        </item>
    </style>


    <!--Dialog Theme Appearance-->

    <style
        name="NTDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">#421</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- This will override the Alert Dialog theme -->
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>


    <!--Alert Theme Appearance-->

    <style
        name="MyAlertDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/NTTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/NTTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/NTTextAppearance</item>
    </style>

    <!--Tab Layout-->

    <style
        name="NTTabLayout"
        parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/tab_background</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabIndicatorHeight">@dimen/_2sdp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/quantum_yellow</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style
        name="MyTabTextAppearance"
        parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Navigation Background Appearance-->

    <style
        name="NTNavigationTextAppearance"
        parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">OpenSans-Bold.ttf</item>
    </style>

    <!--<style name="NTNormalRatingBar" parent="Widget.AppCompat.RatingBar">-->
    <style
        name="NTSmallRatingBar"
        parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorAccent">#6200ea</item>
        <!--<item name="android:colorControlNormal">#f9a825</item>-->
    </style>

    <style
        name="SmallRatingBar"
        parent="Theme.AppCompat">
        <item name="ratingBarStyle">@style/NTSmallRatingBar</item>
    </style>
    <style
        name="myDialog"
        parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
