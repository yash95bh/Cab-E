<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NewDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TransparentFloatingActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent_gray</item>
        <item name="android:windowContentOverlay">@color/transparent_gray</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NTTextAppearance" parent="TextAppearance.AppCompat" />


    <!--Full Theme-->

    <style name="NTtheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textAppearance">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">@color/text_color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/quantum_yellow</item>
        <item name="android:textColor">@color/quantum_yellow</item>

    </style>

    <!--  Splash Screen Appearance-->

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom Dialog Appearance-->

    <style name="dialog_animation" parent="TextAppearance.AppCompat">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsFloating">true</item>


    </style>

    <!-- Begin Activity Appearance-->

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoTitleBarNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowBackground">@color/black</item>-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--  Text Appearance-->

    <style name="NTTitleTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_title</item>
    </style>

    <style name="NTSmallTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="NTRegularTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="NTLargeTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="NTLinkLargeTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_link</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="NTExtraLargeTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="NTExtraLargeTextAppearanceWhite" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>


    <style name="NTLargeTextAppearanceWhite" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="NTLargeTextAppearanceAccent" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="NTRegularTextAppearanceWhite" parent="TextAppearance.AppCompat">

        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <!-- Button Appearance-->

    <style name="NTButtonStyleRight" parent="@android:style/Widget">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/left_rounded_corner</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
        <item name="android:minHeight">0dp</item>

    </style>


    <style name="NTButtonStyleLeft" parent="@android:style/Widget">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/right_rounded_corner</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="NTButtonStyle" parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>


    <style name="NTButtonStyleRide" parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button_gray</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>

    <style name="NTButtonStyleRide1" parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button_gray</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>
