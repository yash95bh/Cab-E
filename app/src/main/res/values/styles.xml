    <!--Edittext Appearance-->

    <style name="NTTextLoginStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:background">@null</item>
    </style>


    <!--Navigation Appearance-->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>
        <item name="android:typeface">sans</item>
    </style>


    <!--CheckBox Appearance-->

    <style name="MyCheckBoxTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>


    <style name="MyCheckBoxsmallTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <!--Hint Text Appearance-->

    <style name="NTHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_hint</item>
    </style>

    <!--Toggle Switch Appearance-->

    <style name="toggle_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/light_gray
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/light_gray
        </item>
    </style>


    <!--Dialog Theme Appearance-->

    <style name="NTDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">#421</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- This will override the Alert Dialog theme -->
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>


    <!--Alert Theme Appearance-->

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/NTTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/NTTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/NTTextAppearance</item>
    </style>

    <!--Tab Layout-->

    <style name="NTTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/_2sdp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/quantum_yellow</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/quantum_grey500</item>
        <item name="colorControlActivated">@color/quantum_yellow</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Navigation Background Appearance-->

    <style name="NTNavigationTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        ]
    </style>

    <!--<style name="NTNormalRatingBar" parent="Widget.AppCompat.RatingBar">-->
    <style name="NTSmallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorAccent">#6200ea</item>
        <!--<item name="android:colorControlNormal">#f9a825</item>-->
    </style>

    <style name="SmallRatingBar" parent="Theme.AppCompat">
        <item name="ratingBarStyle">@style/NTSmallRatingBar</item>
    </style>

    <style name="NTButtonStylePrimaryBlack" parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/_45sdp</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>

    <style name="NTButtonStylePrimary" parent="@android:style/Widget">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/border_stroke_black</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>

</resources>
