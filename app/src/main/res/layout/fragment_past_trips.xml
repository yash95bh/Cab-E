<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrtimeperiod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/background_rect_stroke"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_pastTrip"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:entries="@array/time_period"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/sp_timeperiod_image"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_right_rounded"
            android:padding="5dp"
            android:src="@drawable/ic_down_arrow"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_errorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_error" />
    </LinearLayout>

</LinearLayout>