<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/profile_title"
            style="@style/NTExtraLargeTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="start|center"
            android:text="Forgot Password"
            android:textSize="@dimen/_16sdp">

        </com.eviort.cabedriver.NTCustomView.NTBoldTextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnrTitle"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical"
        android:visibility="visible">

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/email_id_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/enter_your_mobile_number"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/border_stroke_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            android:weightSum="3">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_phone" />

            <com.eviort.cabedriver.NTCustomView.NTEditText
                android:id="@+id/et_emailId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="2.7"
                android:background="#00000000"
                android:hint="@string/mobile_no"
                android:inputType="phone"
                android:digits="0123456789"
                android:textColor="@color/black"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/email_id_descecription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:text="@string/password_reset"
            android:textColor="@color/quantum_grey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrTitle"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/verify_desc"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:text="@string/verify_with_OTP"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/send_via_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/_14sdp" />

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:cursorVisible="true"
            app:forceKeyboard="false"
            app:inputType="number"
            app:password="false"
            app:pinBackground="@drawable/border_stroke_black"
            app:pinHeight="@dimen/_35sdp"
            app:pinLength="6"
            app:pinWidth="@dimen/_30sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_20sdp">

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:id="@+id/resend_timer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/colorGrey"
                android:textStyle="bold" />

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:id="@+id/resend_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="@dimen/_3sdp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:id="@+id/resend_timer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:padding="@dimen/_10sdp"
                android:text="Resend OTP"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shadow_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_password">

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <com.eviort.cabedriver.NTCustomView.NTTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/new_password"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.eviort.cabedriver.NTCustomView.NTEditText
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:background="@color/transparent"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/_2sdp"
                        android:text=""
                        android:textColor="@color/quantum_grey500"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/show_hide_new_passowrd"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="0.3"
                        app:srcCompat="@drawable/ic_eye_icon_hide" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shadow_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_password">

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <com.eviort.cabedriver.NTCustomView.NTTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.eviort.cabedriver.NTCustomView.NTEditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:background="@color/transparent"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/_2sdp"
                        android:text=""
                        android:textColor="@color/quantum_grey500"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/show_hide_confirm_passowrd"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="0.3"
                        app:srcCompat="@drawable/ic_eye_icon_hide" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <com.eviort.cabedriver.NTCustomView.NTButton
            android:id="@+id/btn_send"
            style="@style/NTButtonStylePrimaryBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/f_next"
            android:textSize="@dimen/_17sdp" />

        <com.eviort.cabedriver.NTCustomView.NTButton
            android:id="@+id/btn_resend"
            style="@style/NTButtonStylePrimaryBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/reset_password"
            android:textSize="@dimen/_17sdp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>