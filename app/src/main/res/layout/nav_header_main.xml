<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_10sdp"
    android:gravity="bottom"

    android:orientation="vertical"
    android:paddingTop="@dimen/_1sdp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.eviort.cabedriver.NTCustomView.NTCircularImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_driver_black"
            tools:civ_border_color="@color/theme_gold"
            tools:civ_border_width="2dp"
            tools:civ_shadow="true"
            tools:civ_shadow_color="#FFFFFF"
            tools:civ_shadow_radius="5" />

        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/usernameTxtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp" />

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="@dimen/_5sdp"
            android:text="@string/view_profile"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorGreyLite"></View>
</LinearLayout>
