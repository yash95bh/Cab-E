<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lnrTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:contentDescription="@string/back"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/icon_backarrow_black"
            android:tint="@color/black" />

        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/driver_wallet_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@id/backArrow"
            android:gravity="center_vertical"
            android:text="@string/action_rewards"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/lnrtimeperiod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/sp_timeperiod"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:entries="@array/time_period"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/ic_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_down_arrow"
            android:visibility="gone">

        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_earnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrTitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="visible">


        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="3454 points"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/from_to"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_your_earnings" />


        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Your reward point is 3454"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Expires on 23 march 2022"

            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>


</RelativeLayout>
