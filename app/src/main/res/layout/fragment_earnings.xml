<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lnrTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:visibility="visible"
            card_view:tint="@color/black" />


        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/driver_wallet_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@id/backArrow"
            android:gravity="center_vertical"
            android:text="@string/driver_wallet"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/lnrtimeperiod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/backArrow"
            android:background="@drawable/background_spinner"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/sp_timeperiod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:entries="@array/time_period"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ic_dropdown"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_down_arrow" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_earnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrTitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="4">

            <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="@string/your_earnings"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/from_to"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2"
                android:src="@drawable/ic_your_earnings" />

            <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                android:id="@+id/tv_total_earnings"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="$ 0"
                android:textColor="@color/black"
                android:textSize="25dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="horizontal">


                <com.eviort.cabedriver.NTCustomView.NTButton
                    android:id="@+id/payout_button"
                    style="@style/NTButtonStyleRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:backgroundTint="@color/button_blue"
                    android:gravity="center"
                    android:text="@string/cashout"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/cashout_details"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="-60dp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:src="@drawable/down_arrows"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorDivider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp">

                <LinearLayout
                    android:id="@+id/ll_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                        android:id="@+id/today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:text="@string/Today"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/txt_see_all"
                    android:layout_below="@+id/ll_today"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvtodayCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingTop="8dp"
                        android:visibility="visible" />

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:id="@+id/error_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="@string/no_rides_today"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txt_see_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/top_rounded_grey_corner"
                    android:gravity="center">

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                        android:drawablePadding="@dimen/_12sdp"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/see_all_activity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_earnings_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnrTitle"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <include layout="@layout/fragment_earnings_detail" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cashout_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnrTitle"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <include layout="@layout/fragment_cashout_list" />
    </LinearLayout>

</RelativeLayout>
