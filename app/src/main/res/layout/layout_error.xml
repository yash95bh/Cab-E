<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/error_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/no_internet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">


            <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                android:id="@+id/error_title"
                style="@style/NTExtraLargeTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center" />

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:id="@+id/error_description"
                style="@style/NTRegularTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5">

            </com.eviort.cabedriver.NTCustomView.NTTextView>


            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:id="@+id/tap_to_location_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/tap_to_loc"
                android:textColor="@color/theme_secondary"
                android:textSize="@dimen/regular_font"
                android:visibility="gone" />

            <com.eviort.cabedriver.NTCustomView.NTTextView

                android:id="@+id/tap_to_network_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/tap_to_network"
                android:textColor="@color/theme_secondary"
                android:textSize="@dimen/regular_font"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>