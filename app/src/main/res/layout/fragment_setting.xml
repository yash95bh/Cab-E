<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NTFragment.FragmentSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frg_setting_backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/icon_backarrow_black" />

        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/action_settings"
            android:textColor="@color/text_color_header"
            android:textSize="@dimen/_18sdp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="@string/map_style"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />

            <Switch
                android:id="@+id/switch_map_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/_10sdp"
                android:text="@string/night_mode"
                android:textColor="@color/text_color_black"
                android:textOff="@string/day"
                android:textOn="@string/night"
                android:textSize="@dimen/_12sdp"
                android:theme="@style/toggle_switch" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider" />

            <Switch
                android:id="@+id/switch_satellite_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/_10sdp"
                android:text="@string/satellite_mode"
                android:textColor="@color/text_color_black"
                android:textOff="Day"
                android:textOn="Night"
                android:textSize="@dimen/_12sdp"
                android:theme="@style/toggle_switch" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.eviort.cabedriver.NTCustomView.NTTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:text="Favourite"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <ImageButton
                    android:id="@+id/btn_add_fav_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/icon_addlocation_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:drawableLeft="@drawable/icon_home_black"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center|left"
                        android:padding="@dimen/_5sdp"
                        android:text="Home"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_12sdp" />

                    <com.eviort.cabedriver.NTCustomView.NTButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Delete"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:drawableLeft="@drawable/icon_work_black"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center|left"
                        android:padding="@dimen/_5sdp"
                        android:text="Work"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_12sdp" />

                    <com.eviort.cabedriver.NTCustomView.NTButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Delete"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="Other Saved Location"
                        android:textAllCaps="false"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/favorite_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <com.eviort.cabedriver.NTCustomView.NTButton
                android:id="@+id/btn_logout"
                style="@style/NTButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"

                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Logout"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>