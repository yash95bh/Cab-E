<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <FrameLayout
                    android:id="@+id/fl_driving_lisence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnLicense"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@color/colorGreyMoreLighter"
                        android:src="@drawable/upload_placeholder" />

                    <ImageView
                        android:id="@+id/licenseStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/success_grey"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/fl_ll_liscence"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/fl_driving_lisence"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            android:id="@+id/txt_document"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/license"
                            android:textColor="@color/text_color_black" />

                    </LinearLayout>

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:id="@+id/label_driving_liscence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="@string/hint_driver_form"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_below="@id/fl_ll_liscence"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@id/fl_driving_lisence"
                    android:progressBackgroundTint="@color/bt_blue"
                    android:progressTint="@color/bt_blue"
                    android:secondaryProgressTint="@color/bt_blue"
                    android:visibility="gone"
                    tools:context=".MainActivity" />

                <ImageView
                    android:id="@+id/btnDeleteLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:src="@drawable/delete" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorGreyDark">

            </View>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
