<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/signin_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/ll_signin_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_11sdp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/signin_backArrow"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/back_round"
                            android:padding="@dimen/_4sdp"
                            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/black" />

                        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="start|center"
                            android:text="@string/go_back"
                            android:textSize="@dimen/_15ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/sign_in_phone_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_below="@+id/ll_signin_back"
                        android:adjustViewBounds="true"
                        android:src="@drawable/signin_phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/sign_in_phone_img"
                        android:layout_marginTop="@dimen/_200sdp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="start|center"
                            android:text="@string/welcome_back"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="start|center"
                            android:text="@string/get_started"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="start|center"
                            android:text="@string/enter_mobile_no"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/linear_flag_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/country_choose_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="0.45"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/flag_image"
                                        android:layout_width="38dp"
                                        android:layout_height="55dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/flag_us" />

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ccp_down_arrow"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:background="@color/colorGrey" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.55"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.eviort.cabedriver.NTCustomView.NTTextView
                                        android:id="@+id/dial_code"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.3"
                                        android:gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:text="+677"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        app:srcCompat="@drawable/phone_ic" />

                                    <com.eviort.cabedriver.NTCustomView.NTEditText
                                        android:id="@+id/signin_phone"
                                        android:layout_width="0dp"
                                        android:layout_height="55dp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_weight="1.7"
                                        android:background="@color/transparent"
                                        android:digits="0123456789"
                                        android:hint="@string/signup_mobile_no"
                                        android:inputType="phone"
                                        android:paddingLeft="@dimen/_2sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorGrey"
                                        android:textSize="@dimen/_15sdp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:background="@color/colorGrey" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:padding="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@drawable/border_stroke_gray"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp"
                                android:weightSum="3">

                                <!--<ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:srcCompat="@drawable/flag_soloman_islands" />

                                <com.eviort.cabedriver.NTCustomView.NTTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.48"
                                    android:gravity="center"
                                    android:padding="@dimen/_3sdp"
                                    android:text="+677"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    app:srcCompat="@drawable/phone_ic" />-->

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/countryPicker"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    app:ccp_arrowSize="@dimen/_12sdp"
                                    app:ccp_defaultPhoneCode="677"
                                    app:ccp_showNameCode="false"
                                    app:ccp_showPhoneCode="true"
                                    app:ccp_textSize="@dimen/_12sdp" />

                                <com.eviort.cabedriver.NTCustomView.NTEditText
                                    android:id="@+id/signin_mail"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_weight="2.2"
                                    android:background="#00000000"
                                    android:digits="0123456789"
                                    android:hint="@string/mobile_no"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:paddingLeft="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:background="@drawable/border_stroke_gray"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp"
                                android:visibility="gone"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/_5sdp"
                                    app:srcCompat="@drawable/password_ic" />

                                <com.eviort.cabedriver.NTCustomView.NTEditText
                                    android:id="@+id/signin_password"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_weight="2.4"
                                    android:background="#00000000"
                                    android:fontFamily="@font/opensregular"
                                    android:hint="@string/password"
                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/_12sdp" />

                                <ImageView
                                    android:id="@+id/show_hide_signin_passowrd"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/_5sdp"
                                    app:srcCompat="@drawable/ic_eye_icon_hide" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/signup_click_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.eviort.cabedriver.NTCustomView.NTTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:text="@string/i_forgot_my_password"
                                android:textAllCaps="false"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="@dimen/_12sdp" />

                            <com.eviort.cabedriver.NTCustomView.NTButton
                                android:id="@+id/btn_signup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@null"
                                android:fontFamily="@font/opensregular"
                                android:gravity="center"
                                android:text="@string/forgot_password"
                                android:textAllCaps="false"
                                android:textColor="@color/text_color_link"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:id="@+id/frame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp">

                            <com.eviort.cabedriver.NTCustomView.NTButtonBold
                                android:id="@+id/sign_in_btn"
                                style="@style/NTButtonStylePrimaryBlack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/signin"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signin_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/lnrTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_11sdp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/back_round"
                            android:padding="@dimen/_4sdp"
                            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/black" />

                        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                            android:id="@+id/txt_title"
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="start|center"
                            android:text="@string/go_back"
                            android:textSize="@dimen/_15ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/sign_in_otp_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_below="@+id/lnrTitle"
                        android:src="@drawable/signin_phone_otp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sign_in_otp_img"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="@string/one_time_password"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            style="@style/NTExtraLargeTextAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/otp_text"
                            android:textSize="@dimen/_12ssp" />

                        <LinearLayout
                            android:id="@+id/otp_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_1sdp"
                            android:visibility="visible"
                            android:weightSum="3">

                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />

                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />

                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />


                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />

                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />

                            <com.eviort.cabedriver.NTCustomView.NTEditText
                                android:id="@+id/text6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text=""
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <com.eviort.cabedriver.NTCustomView.NTButtonBold
                            android:id="@+id/sign_in_next_btn"
                            style="@style/NTButtonStylePrimaryBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_70sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>