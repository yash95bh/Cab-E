<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <com.eviort.cabedriver.NTCustomView.NTBoldTextView
        android:id="@+id/reason_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:hint="You may be charged for this cancellation"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <com.eviort.cabedriver.NTCustomView.NTBoldTextView
        android:id="@+id/sure_to_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:hint="Are you sure you want to cancel?"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <com.eviort.cabedriver.NTCustomView.NTEditText
        android:id="@+id/reason_etxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="Enter cancel Reason"
        android:lines="3"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/dont_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Dont cancel"
            android:textColor="@color/bt_blue" />

        <com.eviort.cabedriver.NTCustomView.NTTextView
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Cancel Ride"
            android:textColor="@color/bt_blue" />
    </LinearLayout>
</LinearLayout>
