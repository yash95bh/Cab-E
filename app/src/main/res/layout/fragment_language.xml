<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/lnrTitle"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:contentDescription="@string/back"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/icon_backarrow_black"
                android:visibility="visible"
                app:tint="@color/black" />

            <com.eviort.cabedriver.NTCustomView.NTBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:text="@string/action_language"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_change_language"
            android:layout_below="@+id/lnrTitle"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <com.eviort.cabedriver.NTCustomView.NTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/lang_desc"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/_15sdp" />
            <!-- TODO: Update blank fragment layout -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/chipcolor"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            style="@style/NTHintTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/lang_spanish"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGreyLite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            android:id="@+id/txt_english"
                            style="@style/NTHintTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:text="@string/lang_english"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGreyLite" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGreyLite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.eviort.cabedriver.NTCustomView.NTTextView
                            android:id="@+id/txt_arabic"
                            style="@style/NTHintTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/lang_arabic"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/chipcolor"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGreyLite" />

                    <com.eviort.cabedriver.NTCustomView.NTTextView
                        android:id="@+id/txt_spanish"
                        style="@style/NTHintTextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/lang_spanish"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGreyLite" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/rg_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_lang_arabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/lang_arabic"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_lang_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/lang_english"
                    android:textSize="@dimen/_14sdp" />

                <RadioButton
                    android:id="@+id/rb_lang_french"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/lang_french"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/rb_lang_german"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/lang_german"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_lang_spanish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/lang_spanish"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

            </RadioGroup>


        </LinearLayout>

        <com.eviort.cabedriver.NTCustomView.NTButton
            android:id="@+id/btn_change_language"
            style="@style/NTButtonStylePrimaryBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/select"
            android:textSize="@dimen/_17sdp" />
    </RelativeLayout>


</LinearLayout>




